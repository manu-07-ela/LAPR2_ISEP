<AnchorPane prefWidth="550.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.ItemClientController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="53.0" prefWidth="593.0" style="-fx-border-width: 2px 2px 2px 2px; -fx-border-color: #1a7180; -fx-border-radius: 20;">
            <children>
            <ImageView fitHeight="31.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
