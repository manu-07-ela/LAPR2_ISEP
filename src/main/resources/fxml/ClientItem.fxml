                        <Font name="System Bold" size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <Separator orientation="VERTICAL" prefHeight="35.0" prefWidth="6.0">
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                </Separator>
            <Label fx:id="name" alignment="CENTER" prefHeight="27.0" prefWidth="182.0">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </Label>
                <Separator orientation="VERTICAL" prefHeight="35.0" prefWidth="6.0">
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                </Separator>
            <Label fx:id="citizenCardNumber" alignment="CENTER" prefHeight="27.0" prefWidth="200.0">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </Label>
                <Separator orientation="VERTICAL" prefHeight="49.0" prefWidth="17.0">
                    <padding>
                        <Insets right="3.0" />
                    </padding>
                </Separator>
                <Button fx:id="selectClient" mnemonicParsing="false" onMouseClicked="#selectClientClick" prefHeight="31.0" prefWidth="71.0" style="-fx-background-radius: 20; -fx-background-color: #239ba1; -fx-font-size: 15; -fx-font-weight: bold;" text="Select" textFill="#f8f7f7">
