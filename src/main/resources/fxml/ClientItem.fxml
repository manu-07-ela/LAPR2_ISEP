<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.ItemClientController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="53.0" prefWidth="593.0" style="-fx-border-width: 2px 2px 2px 2px; -fx-border-color: #1a7180; -fx-border-radius: 20;">
            <children>
                <ImageView fitHeight="30.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/user%20(1).png" />
                    </image>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </ImageView>
                <Label alignment="CENTER" prefHeight="35.0" prefWidth="66.0" text="Client">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <Separator orientation="VERTICAL" prefHeight="35.0" prefWidth="6.0">
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                </Separator>
                <Label fx:id="nameClient" prefHeight="27.0" prefWidth="145.0" textAlignment="CENTER" />
                <Separator orientation="VERTICAL" prefHeight="35.0" prefWidth="6.0">
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                </Separator>
                <Label fx:id="citizenCardNumberClient" prefHeight="27.0" prefWidth="209.0" textAlignment="CENTER" />
                <Separator orientation="VERTICAL" prefHeight="49.0" prefWidth="17.0">
                    <padding>
                        <Insets right="3.0" />
                    </padding>
                </Separator>
                <Button fx:id="selectClient" mnemonicParsing="false" onMouseClicked="#selectClientClick" style="-fx-background-radius: 20; -fx-background-color: #239ba1; -fx-font-size: 15; -fx-font-weight: bold;" text="Select" textFill="#f8f7f7" />
            </children>
        </HBox>
    </children>
</AnchorPane>
