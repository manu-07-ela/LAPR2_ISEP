                  <Image url="@../images/user%20(1).png" />
               </image>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ImageView>
                <Label alignment="CENTER" prefHeight="35.0" prefWidth="66.0" text="Client">
